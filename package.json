{
	"name": "@resourge/react-search-params",
	"version": "1.12.2",
	"description": "react-search-params is a simple hook to control current url search. Also provides so methods that extend URLSearchParams.",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"private": false,
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"javascript",
		"URLSearchParams",
		"react",
		"hooks",
		"typescript",
		"react-hooks",
		"react-search-params"
	],
	"files": [
		"dist"
	],
	"author": "resourge",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/resourge/react-search-params.git"
	},
	"exports": {
		".": {
			"default": "./dist/index.js"
		},
		"./mobile": {
			"default": "./dist/index.native.js"
		}
	},
	"typesVersions": {
		"*": {
			"index.d.ts": [
				"./dist/index.d.ts"
			],
			"mobile": [
				"./dist/index.native.d.ts"
			]
		}
	},
	"scripts": {
		"commitizen": "git-cz",
		"commit": "git pull && git add . && npm run commitizen",
		"lint": "eslint \"./src/**/*.{ts,tsx}\"",
		"lint:prod": "cross-env NODE_ENV=production npm run lint",
		"dev": "vite",
		"build": "tsc && vite build",
		"test": "vitest run",
		"test:watch": "vitest",
		"coverage": "vitest run --coverage",
		"semantic-release": "semantic-release"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-native": "*",
		"react-native-url-polyfill": "*"
	},
	"peerDependenciesMeta": {
		"react-native": {
			"optional": true
		},
		"react-native-url-polyfill": {
			"optional": true
		}
	},
	"devDependencies": {
		"@fastify/deepmerge": "^2.0.2",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/exec": "^7.0.3",
		"@semantic-release/git": "^10.0.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.4",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@vitejs/plugin-react-swc": "^3.8.0",
		"app-root-path": "^3.1.0",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.44.0",
		"eslint-config-react-app": "^7.0.1",
		"eslint-config-standard-with-typescript": "^36.0.1",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-import-newlines": "^1.3.4",
		"eslint-plugin-n": "^15.6.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-testing-library": "^5.11.0",
		"eslint-plugin-typescript-sort-keys": "^2.3.0",
		"glob": "^11.0.1",
		"jsdom": "^26.0.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-native": "^0.75.2",
		"semantic-release": "^24.2.3",
		"typescript": "^5.7.3",
		"vite": "^6.1.1",
		"vite-plugin-banner": "^0.8.0",
		"vite-plugin-checker": "^0.9.0",
		"vite-plugin-dts": "^4.5.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.0.6"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"@resourge/history-store": "^1.3.5"
	}
}
